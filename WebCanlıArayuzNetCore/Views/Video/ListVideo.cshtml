@model IEnumerable<VideoModel>

@{
    ViewData["Title"] = "ListVideo";
}

<h1>Video Listesi</h1>

<p>
    <a class="btn btn-dark" asp-action="Create">Yeni Video Ekle</a>
</p>
<table id="categoriesTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.yayinAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.yayinLink)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.yayinAdi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.yayinLink)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Güncelle</a>|
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<link href="~/lib/datatables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>


<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>$('#categoriesTable').dataTable({});</script>
